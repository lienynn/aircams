<%= simple_form_for [ @camera ] do |f| %>

  <%= f.input :model %>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" } },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :details %>
  <%= f.input :price_per_day %>
  <%= f.input :photo, as: :file %>

  <%# Will need to add picture %>
  <%= f.submit "Add a camera", class:"btn btn-success" %>
<% end %>
