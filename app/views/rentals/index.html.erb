<h1 class="text-center my-3">My Rentals</h1>

<div class="container">
  <div class="centering-cards">
    <% @rentals.each do |rental| %>
      <%# <div class="card-product"> %>
        <% if current_user == rental.user %>
          <h2><%= link_to rental.camera.model, rental_path(rental) %></h2>
          <p>Details: <%= rental.camera.details %></p>
          <p>From: <%= rental.start_date %></p>
          <p>Until: <%= rental.end_date %></p>
        <% end %>
      <%# </div> %>

    <% end %>
  </div>
</div>
