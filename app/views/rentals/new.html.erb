<h1>Book camera</h1>

<div class="form-wrapper" style="width: 400px; margin: 0 auto;" data-controller="flatpickr">
  <%= simple_form_for [ @camera, @rental ] do |f| %>
    <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
    <%= f.submit "Submit request", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to "Back to cameras", cameras_path %>
