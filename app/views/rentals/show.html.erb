<h1>Rental summary:</h1>

<p><%= @rental.camera.model %></p>
<p><%= @rental.camera.details %></p>
<p>From:<%= @rental.start_date %></p>
<p>Until:<%= @rental.end_date %></p>

<% if current_user == @rental.user %>
  <p>you are the Renter !</p>
  <p>[link to cancel request]</p>
<% else %>
  <p>Current Rental Status : <%= @rental.status %></p>
  <p>you are the Owner !</p>
  <p>[link_to "Approve request]</p>
  <p>[link_to "Decline request]</p>
<% end %>

<%= link_to "Back to cameras", cameras_path %>
